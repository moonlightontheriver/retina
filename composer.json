{
    "name": "retina/retina",
    "description": "An open-source CLI-based static analyzer for PocketMine-MP plugins",
    "type": "project",
    "license": "MIT",
    "keywords": ["pocketmine", "pmmp", "static-analysis", "linter", "plugin-scanner"],
    "authors": [
        {
            "name": "Chinmay",
            "email": "hi@chinmay.lol"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.4|^7.0",
        "symfony/filesystem": "^6.4|^7.0",
        "symfony/yaml": "^6.4|^7.0",
        "symfony/finder": "^6.4|^7.0",
        "symfony/process": "^6.4|^7.0",
        "nikic/php-parser": "^5.0",
        "phpstan/phpstan": "^1.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Retina\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Retina\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/retina"
    ],
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src -l 6"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "minimum-stability": "stable"
}
